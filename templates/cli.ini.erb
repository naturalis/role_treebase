# Use a 4096 bit RSA key instead of 2048
rsa-key-size = 4096

# the staging/testing server : https://acme-staging.api.letsencrypt.org/directory
# the main server for production : https://acme-v01.api.letsencrypt.org/directory
server = <%= @letsencrypt_server %>

# Update to register with the specified e-mail address
email = <%= @letsencrypt_email %>

# generate certificates for the specified domain(s)
domains =  <%= @letsencrypt_domain %>

# use the standalone authenticator on port 443
 authenticator = standalone
 standalone-supported-challenges = tls-sni-01

# renew cert if already exists
renew-by-default

# agree to the tos
agree-tos
