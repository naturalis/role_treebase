# Renew Let's Encrypt SSL cert

cd <%= @letsencrypt_path %>
./letsencrypt-auto certonly --apache -d <%= @letsencrypt_domain %> --email <%= @letsencrypt_email %> --agree-tos --server <%= @letsencrypt_server %> --renew-by-default
if [ $? -ne 0 ]
 then
        ERRORLOG=`tail /var/log/letsencrypt/letsencrypt.log`
        echo -e "The Lets Encrypt Cert has not been renewed! \n \n" $ERRORLOG
 else
        service apache2 reload
fi

exit 0
